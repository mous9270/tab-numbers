{
  "manifest_version": 3,
  "name": "Tab Navigator",
  "version": "1.0",
  "description": "Displays a list of tabs when a specific key combination is pressed.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "show-tab-list": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+T"
      },
      "description": "Show tab list"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}

