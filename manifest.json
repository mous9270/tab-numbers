{
  "manifest_version": 3,
  "name": "Tab Numberer",
  "version": "1.0",
  "description": "Displays tab numbers when Alt is pressed",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
